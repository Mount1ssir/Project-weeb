<!DOCTYPE html>
<html lang="en" data-bs-theme="auto">
  <head>
    <script src="./js/color-modes.js"></script>
    <link
      rel="stylesheet"
      href="./bootstrap-icons-1.10.5/font/bootstrap-icons.min.css"
    />
    <link
      rel="shortcut icon"
      href="../public/imgs/burger.png"
      type="image/x-icon"
    />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="" />
    <meta
      name="author"
      content="Mark Otto, Jacob Thornton, and Bootstrap contributors"
    />
    <meta name="generator" content="Hugo 0.112.5" />
    <title>Home page</title>

    <link href="./css/bootstrap.min.css" rel="stylesheet" />

    <%- include('Components/style.ejs') %>

    <link href="./css/sidebars.css" rel="stylesheet" />
    <link rel="stylesheet" href="./css/myStyle.css" />
  </head>
  <body>
    <%- include('Components/theme.ejs') %>
    <main class="d-flex flex-nowrap">
      <div
        id="sidebarId"
        class="position-relative d-flex flex-column flex-shrink-0 p-3 text-bg-dark sidebar"
      >
        <span style="right: 10px; top: 2px" class="position-absolute">
          <button class="btn" onclick="toggleSidebar()">
            <i class="bi bi-x-circle"></i>
          </button>
        </span>

        <a
          href="/"
          class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none"
        >
          <i class="bi bi-lightning-charge"></i>
          <span class="fs-4 sidebar-text">Mountassir</span>
        </a>
        <hr />
        <ul class="nav nav-pills flex-column mb-auto">
          <li class="nav-item">
            <a href="/" class="nav-link active" aria-current="page">
              <svg class="bi pe-none me-2" width="16" height="16">
                <use xlink:href="#home" />
              </svg>
              <span class="sidebar-text"> Home </span>
            </a>
          </li>

          <li>
            <a href="./user/add" class="nav-link text-white">
              <svg class="bi pe-none me-2" width="16" height="16">
                <use xlink:href="#people-circle" />
              </svg>
              <span class="sidebar-text">Add Customers </span>
            </a>
          </li>
          <li>
            <a href="./product/add" class="nav-link text-white">
              <svg class="bi pe-none me-2" width="16" height="16">
                <use xlink:href="#product-box" />
              </svg>
              <span class="sidebar-text"> Add Product </span>
            </a>
          </li>
        </ul>

        <hr />
        <div class="dropdown">
          <a
            href="#"
            class="d-flex align-items-center text-white text-decoration-none dropdown-toggle"
            data-bs-toggle="dropdown"
            aria-expanded="false"
          >
            <img
              src="./imgs/burger.png"
              alt=""
              width="32"
              height="32"
              class="rounded-circle me-2"
            />
            <strong class="sidebar-text">Mustapha</strong>
          </a>
          <ul class="dropdown-menu dropdown-menu-dark text-small shadow">
            <li><a class="dropdown-item" href="#">New project...</a></li>
            <li><a class="dropdown-item" href="#">Settings</a></li>
            <li><a class="dropdown-item" href="#">Profile</a></li>
            <li><hr class="dropdown-divider" /></li>
            <li><a class="dropdown-item" href="#">Sign out</a></li>
          </ul>
        </div>
      </div>
      <div class="b-example-divider b-example-vr"></div>

      <section class="w-100">
        <%- include('Components/navbar.ejs') %>
        <h1 class="ms-4 mt-1" style="font-size: 2em">Customers Liste</h1>
        <table
          style="width: 99%"
          class="text-center mx-auto table mt-2 table-striped table-bordered"
        >
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Full Name</th>
              <th scope="col">Gender</th>
              <th scope="col">Country</th>
              <th scope="col">Age</th>
              <th scope="col">Last updated</th>
            </tr>
          </thead>
          <tbody>
            <% arrC.forEach((element,index) => { %>
            <tr>
              <th scope="row"><%=index+1 %></th>
              <td><%=element.FirstName %> <%=element.LastName %></td>

              <td><%=element.Gender %></td>
              <td><%=element.Country %></td>
              <td><%=element.Age %></td>

              <td>
                <%= moment(element.updatedAt).startOf(`hour`).fromNow() %>
              </td>
              <td>
                <a
                  data-bs-toggle="tooltip"
                  data-bs-title="View details"
                  data-bs-placement="top"
                  class="btn btn-primary btn-sm"
                  href="./user/<%= element._id%>"
                  ><i class="bi bi-eye"></i
                ></a>

                <a
                  data-bs-toggle="tooltip"
                  data-bs-title="Edit user"
                  data-bs-placement="top"
                  class="btn btn-primary btn-sm"
                  href="./user/edit/<%= element._id %>"
                >
                  <i class="bi bi-pencil"></i>
                </a>

                <form
                  style="display: inline-block"
                  action="/edit/<%= element._id %>?_method=DELETE"
                  method="post"
                >
                  <button
                    data-bs-toggle="tooltip"
                    data-bs-title="Delete user"
                    data-bs-placement="top"
                    class="btn btn-danger btn-sm"
                  >
                    <i class="bi bi-trash"></i>
                  </button>
                </form>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
        <h1 class="ms-4 mt-5" style="font-size: 2em">Products Liste</h1>
        <table
          style="width: 99%"
          class="text-center mx-auto table mt-1 table-striped table-bordered"
        >
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">product</th>
              <th scope="col">Price (DH)</th>
              <th scope="col">Stocke</th>
            </tr>
          </thead>
          <% arrP.forEach((element,index) => { %>
          <tbody>
            <tr>
              <th scope="row"><%= index+1 %></th>
              <td><%= element.Productname %></td>
              <td><%= element.Price %></td>
              <td><%= element.Stock %></td>
              <td class="px-0">
                <a
                  data-bs-toggle="tooltip"
                  data-bs-title="Edit product"
                  data-bs-placement="top"
                  class="btn btn-primary btn-sm"
                  href="./product/edit"
                >
                  <i class="bi bi-pencil"></i>
                </a>
                <form
                  style="display: inline-block"
                  action="/product/<%= element._id %>?_method=DELETE"
                  method="post"
                >
                  <button
                    data-bs-toggle="tooltip"
                    data-bs-title="Delete user"
                    data-bs-placement="top"
                    class="btn btn-danger btn-sm"
                  >
                    <i class="bi bi-trash"></i>
                  </button>
                </form>
              </td>
            </tr>
          </tbody>
          <% }) %>
        </table>
      </section>
    </main>
    <script src="./js/bootstrap.bundle.min.js"></script>

    <script src="./js/sidebars.js"></script>

    <script src="./js/main.js"></script>
  </body>
</html>
